[Unit]
Description=PortCL AI Portage Optimization Agent
Documentation=https://github.com/awdemos/RegicideOS/ai-agents/portcl
After=network.target portage.service
Wants=portage.service

[Service]
Type=simple
User=root
Group=root
ExecStart=/usr/local/bin/portcl-agent --config /etc/portcl/config.toml
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/lib/portcl /var/log/portcl
RestrictSUIDSGID=true
RemoveIPC=true

# Resource limits
LimitNOFILE=65536
MemoryMax=512M
CPUQuota=50%

[Install]
WantedBy=multi-user.target