[Unit]
Description=PortCL System Metrics Monitor
Documentation=https://github.com/awdemos/RegicideOS/ai-agents/portcl
After=network.target
Before=portcl-agent.service

[Service]
Type=simple
User=root
Group=root
ExecStart=/usr/local/bin/portcl-monitor --config /etc/portcl/config.toml
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/lib/portcl /var/log/portcl
RestrictSUIDSGID=true
RemoveIPC=true

# Resource limits
LimitNOFILE=32768
MemoryMax=256M
CPUQuota=25%

[Install]
WantedBy=multi-user.target